<div id="login">
	<div class="card login-form">
		<center><h1>Log In</h1></center>
		<br>
		<h4>Don't have an account? Sign up!</h4>
		<br>
		<br>
		<% if flash[:notice] %>
			<div class="alert alert-primary mt-4" role="alert">
				<%= flash[:notice]%>
			</div>
		<% end %>
		<% if flash[:alert] %>
			<div class="alert alert-warning mt-4" role="alert">
				<%= flash[:alert]%>
			</div>
		<% end %>
		<%= form_with url: sign_in_path do |form|%>
			<div class="mb-3">
				<%= form.label :email %>*
				<%= form.text_field :email, class: "form-control", placeholder: "Email" %>
			</div>
			<br>
			<div class="mb-3">
				<%= form.label :password %>*
				<%= form.password_field :password,class: "form-control", placeholder: "Password"  %>
				<br>
			</div>
			<br>
			<div class="mb-3">
				<%= form.submit "Sign In", class: "btn btn-block btn-success"  %> 
			</div> 
		<% end %>
	</div>

	<div class="card extra">
		<h1>Work Smarter and Faster as a Team</h1>
		<ul>
			<li>Instant Freight Quotes from 100s of Carriers</li>
			<li>24/7 Access to Exclusive Rates</li>
			<li>Super-Friendly Support</li>
		</ul>
		<%= image_tag 'happy-star-icon.png'%>
	</div>
</div>
